@*ADD MODEL DIRECTIVE TO GET INTELLISENSE*@
@*MODEL REPRESENTS THE MODEL OBJ. PASSED INTO THE VIEW RESULT*@

@model HomeIndexViewModel

@{
    ViewBag.Title = "Home page";
    // USE IF STATEMENT TO SWITCH BETWEEN LAYOUTS (DEV/PROD/..)
    // SET Layout = null TO NOT USE ANY LAYOUT
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Restaurants</h1>
<table>
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Id</td>
            <td>@restaurant.Name</td>

            @*1. VARIANT*@
            <td><a href="/home/details/@restaurant.Id">details</a></td>

            @*2. (OLD ASP.NET) VARIANT*@
            <td>@Html.ActionLink("Go", "Details", new { id = restaurant.Id })</td>

            @*3. TAGHELPER (SERVER SIDE PROCESSING)*@
            <td><a asp-action="Details" asp-route-id="@restaurant.Id">More</a></td>
        </tr>
    }
</table>
<a asp-action="Create">Add restaurant</a>

@* ANY MARKUP PLACED INSIDE HERE WILL BE PLACED INTO THE APPROPRIATE @RENDERSECTION()*@
@section footer {
    @this.Model.CurrentMessage
}